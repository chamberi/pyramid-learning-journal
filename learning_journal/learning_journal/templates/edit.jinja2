{% extends "layout.jinja2" %}

{% block body %}
<div class="content">
        <form method="POST">
    
        <label for="title">New Entry Name: </label><br/>
        <input type="text" value="{{ data.title }}"name="title"/><br/>
        
        <label for="body">Text of article: </label><br/>
        <textarea name="body" cols="100" rows="10">{{ data.body }}</textarea><br>
        <input type="submit" value="Submit"/>
    </form>
</div>
{% endblock body %}